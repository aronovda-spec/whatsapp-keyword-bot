# Environment Variables Template
# Copy this file to .env and fill in your values

# ====================================================
# Telegram Bot Configuration
# ====================================================
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Primary Admin (you) - This user is always admin
TELEGRAM_CHAT_ID=123456789

# Optional: Additional Telegram users (comma-separated)
# These users will receive global keyword notifications
# Example: 987654321,111222333
TELEGRAM_ADDITIONAL_CHAT_IDS=

# Optional: Fallback admin (for recovery if primary admin is locked out)
TELEGRAM_FALLBACK_ADMIN=999888777

# Admin API Key (for protecting admin endpoints)
# Generate a secure random string (e.g., openssl rand -hex 32)
ADMIN_API_KEY=your_secure_random_api_key_here

# Email Notification Configuration (Optional)
EMAIL_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASS=your_app_password_here

# Global email recipients (comma-separated)
# For global keyword alerts, ALL emails here receive notifications
# Example with multiple admin emails:
EMAIL_TO=admin@company.com,backup@company.com

# Optional: Per-user email mapping (create config/user-emails.json)
# This maps Telegram user IDs to their email addresses
# Supports multiple emails per user (use array for multiple)
# Personal keyword alerts will be sent to these specific emails
#
# Example config/user-emails.json:
# {
#   "123456789": "admin@company.com",
#   "987654321": ["work@company.com", "personal@gmail.com"],
#   "111222333": "john.doe@example.com"
# }

# Supabase Configuration (Optional - for cloud database and session backup)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
# Supabase Service Key (Recommended - for storage access, bypasses RLS)
# Get from: Project Settings → API → service_role (secret)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/bot.log
