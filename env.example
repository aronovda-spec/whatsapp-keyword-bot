# Environment Variables Template
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Optional: Add more Telegram users (comma-separated)
# These users will also receive notifications
TELEGRAM_ADDITIONAL_CHAT_IDS=user2_chat_id,user3_chat_id

# Optional: Fallback admin (for recovery if primary admin is locked out)
TELEGRAM_FALLBACK_ADMIN=fallback_admin_chat_id

# Email Notification Configuration (Optional)
EMAIL_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASS=your_app_password_here

# Email recipients (comma-separated) - Multiple emails supported!
EMAIL_TO=user1@example.com,user2@example.com,user3@example.com

# Server Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/bot.log
